def fioList = lines
  .findAll { it?.trim() && !it.trim().startsWith('#') && !it.trim().startsWith('//') }
  .collect { line ->
    def cols = splitCsv(line)                  // ваш сплиттер остаётся тем же
    def fioParts = (cols.size() > FIO_COL ? cols[FIO_COL] : '').trim().tokenize(/\s+/)
    fioParts.take(3).join(' ')                 // ← только строка ФИО
  }
  .findAll { it && it.split(/\s+/).size() >= 2 } // фильтр мусора

return fioList