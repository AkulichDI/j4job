// ВСТАВЬТЕ CSV между $/ и /$
def CSV_TEXT = $/
Иванов Иван Иванович,ivanov@example.com,Отдел
Петров Петр Петрович,petrov@example.com,Отдел
/$

char DELIM = ','   // замените на ';' если у вас ; 
int  FIO_COL = 0   // индекс колонки с ФИО (0 — первая)

def looksLikeFio = { String s ->
  def w = (s ?: '').trim().tokenize(/\s+/)
  w.size() >= 2 && !(s =~ /\d/)
}

def fioList = CSV_TEXT.readLines()
  .findAll { it?.trim() }                                   // убираем пустые строки
  .collect { line ->
    def parts = line.split(java.util.regex.Pattern.quote(String.valueOf(DELIM)), -1)
    def cell  = parts.size() > FIO_COL ? parts[FIO_COL] : ''
    def words = cell.trim().tokenize(/\s+/)
    words.take(3).join(' ')
  }
  .findAll(looksLikeFio)                                    // оставляем только «похоже на ФИО»

// Если нужен лог — раскомментируйте:
// fioList.each { logger.info(it) }

return fioList   // массив только из ФИО